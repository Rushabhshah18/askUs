<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="rushabh.com.chatapp.StatusActivity">

    <include layout="@layout/app_bar_layout" android:id="@+id/status_app_bar"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/status_app_bar"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="109dp"
        android:hint="Your Status"
        android:id="@+id/textInputLayout5">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/change_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/save_changes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textInputLayout5"
        android:layout_below="@+id/textInputLayout5"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="37dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="Save Changes"
        android:textColor="@android:color/white" />
</RelativeLayout>
